<body>
  <section class="container-fluid item">
    <div class="row">
      <h2 class="text-center" style="color:white"><%= @item.name %></h2>
        <div class="col-md-4 col-md-offset-2">
          <dl class="dl-horizontal" style="background-color:white">
          <dt>Category:</dt>
          <dd><%= @item.category %></dd>
          <!-- <dt>Price:</dt>
          <dd><%= @item.price %></dd> -->
          <dt>Ingredients:</dt>
          <dd><%= @item.ingredients %></dd>
          <dt>Description:</dt>
          <dd><%= @item.description %></dd>
          </dl>

          <div class="back">
            <button type="button"
            class="btn btn-primary"
            onclick="window.history.back()">Back</button>
          </div>
        </div>

        <div class="col-md-4 item-image">
            <img class="middle" width=250px src="/images/<%= @item.image_file %>" />
        </div>
    </div>
  </section>
</body>