<body>
  <h1 class="header">Would you like a vodka, whiskey, rum or Hypnotiq drink?</h1>
  <section class="container search">
    <form class="navbar-form" role="search">
      <div class="form-group">
        <input type="text" name="search" value="<%= @search %>" class="form-control" placeholder="Fav booze">
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
      <button type="reset"  class="btn btn-warning"
              onclick="window.location.href='/items'">Reset</button>
    </form>
  </section>

  <section class="container items">
    <div class="list-group">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <a href="items/<%= item.id %>" class="list-group-item">
              <h3><%= item.name %></h3>
              <article class="row">
                <div class="col-xs-5">
                  <img class="middle" width=96px src="/images/<%= item.image_file %>"/>
                </div>
                <div class="col-xs-7">
                  <dl class="dl-horizontal">
                    <!-- <dt>Category:</dt> -->
                    <dd><%= item.category %></dd>
                    <!-- <dt>Price:</dt>
                    <dd>$<%= item.price %></dd> -->
                    <dt>Ingredients:</dt>
                    <dd><%= item.ingredients %></dd>
                  </dl>
                </div>
              </article>
          </a>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</body>